<h1>Edit Post: <%= post.title %> </h1>

<form class="edit-form" action="/posts/<%= post.id %>" method="POST" role="form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" value="<%= post.title %>" name="title">
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" value="<%= author.getFullName() %>">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" name="content" required><%= post.content %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<hr/>
<a href="/">&larr; Back Home</a>&nbsp;<span class="glyphicon glyphicon-home" aria-hidden="true"></span>

