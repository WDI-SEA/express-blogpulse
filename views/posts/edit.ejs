<h1>EDIT POST</h1>

<form class="edit-form" action="/posts/<%= post.id %>" method="POST" data-id="<%= post.id %>">
  <div class="form-group">
    <label for="title">Title</label>
    <input value="<%= post.title %>" type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" name="author" value="<%= post.author.getFullName() %>">
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <input value="<%= post.content %>" type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
