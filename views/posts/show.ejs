<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />
	<% post.comments.forEach(function(comment, i) { %>
		<div class="well comment-box">
			<h3><%= post.comments[i].name %></h3>
			<hr />
			<p><%= post.comments[i].content %></p>
		</div>
	<% }) %>

<div class="well">
	<form method="POST" action="/posts/<%= post.id %>">
		<label>Name
			<input type="text" name="name" placeholder="Name...">
		</label>
		<br />
		<label>Content
			<input type="text" name="content">
		</label>
		<br />
		<input type='hidden' name='postId' value='<%= post.id %>'>
		<button type="submit">Submit Comment</button>
	</form>
	<br />
</div>
<a href="/">&larr; Back Home</a>
