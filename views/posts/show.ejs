<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<p>
  <% post.tags.forEach(function(tag) { %>
  <a href="/tags/<%= tag.id %>"><%= tag.name %></a>&nbsp;
  <% }); %>
</p>

<a href="/">&larr; Back Home</a>

<hr />

<h4> Comment on this Post <h4>

<div class="comment-div">
<form action="<%= '/posts/'+ post.id + '/comments' %>" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Comment</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
</div>

<hr />

<h3> Comments </h3>

<% post.comments.forEach(function(comment) { %>
  <div class="well">
    <h5><%= comment.content %></h5>
    <h5> - <%= comment.name %></h5>
    <p>
      <strong><%= moment(comment.createdAt).calendar() %></strong>
    </p>
  </div>
<% }); %>
