<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />

<h3>Comments</h3>

<div class="comment">
<% post.comments.forEach(function(comment){ %> 
  <h5><%= comment.name %></h5>
  <p class="comment-content"><%= comment.content %></p>
  <a class="comment-content delete btn red" href="/comments/<%= comment.id %>" id="<%= post.id %>"><i class="material-icons">delete</i></a>
<% }); %>
</div>

<hr />

<h4>Comment on this post:</h4>
<form method="POST" action="/comments/">
  <input type="hidden" name="postId" value ="<%= post.id %>" >
  <label>Name<br>
    <input type="text" name="name">
  </label><br>
  <label>Content<br>
    <input type="text" name="content">
  </label><br>
  <input class="btn green" type="submit">
</form>
<br>
<a href="/">&larr; Back Home</a>
