<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />

<h3>Here's what the trolls say:</h3>

<%comment.forEach(function(comment){ %>
<p><strong><%= moment(comment.createdAt).calendar() %></strong></p>
<p><%= comment.content %></p>
<p><i>by: <%= comment.name %></i></p>
<hr />
<% }) %>
<hr />



<hr />

<a href="/posts/<%= post.id %>/comment">Be a troll</a>
