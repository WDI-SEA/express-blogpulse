
<h1><%= post.title %> <small>by <%= post.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p><%= post.content %></p>

<hr />

<h2>write a comment</h2>

    <% post.comments.forEach(function(comment) { %>
      <div class="well">
        <h4><%= comment.name %></h4>
        <p><%= comment.content %></p>
      </div>
    <% }); %>

<hr />

<h3>Submit a new comment:</h1>

<form action="/posts/<%= post.id %>/comments" method="POST">
  <div class="form-group">
    <label for="name">Your Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Please enlighten me...</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>

<hr />

<a href="/">&larr; Back Home</a>
