<!DOCTYPE html>
<h1>Create a new post</h1>

<form action="/posts" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="author">Find your name: </label>
    <a class='dropdown-button btn' href='#' data-activates='dropdown1'>User List &darr;</a>

    <ul id='dropdown1' class='dropdown-content'>
      <% authors.forEach(function(author) { %>
        <li><a href="<%= author.id %>"><%= author.getFullName() %></a></li>
      <% }); %>
    </ul>
    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
