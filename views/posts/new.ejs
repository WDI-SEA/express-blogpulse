<h1>Create a new post</h1>

<form action="/posts" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    <select name="authorId" id="author" class="form-control" required>
      <% authors.forEach(function(author) { %>
        <option value="<%= author.id %>"><%= author.getFullName() %></option>
      <% }); %>
    </select>
    If your name doesn't show up, please sign up to be an author.<input type="button" class="btn btn-primary sign-up" value="Sign Up" ></input>
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <div class="form-group">
    <label>Enter a Tag</label>
    <input type="text" class="form-control" name="tagName" required>
  </div>

  <input type="submit" class="btn btn-primary">
</form>

<!-- modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content well">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sign up for BlogPulse</h4>
      </div>
      <div class="modal-body">
        <h1>Sign up for BlogPulse</h1>
        <form action="/authors" method="POST">
          <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" required>
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" required>
          </div>
          <div class="form-group">
            <label for="bio">Bio</label>
            <textarea type="text" class="form-control" id="bio" name="bio" required></textarea>
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<hr/>
<a href="/">&larr; Back Home</a>&nbsp;<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
