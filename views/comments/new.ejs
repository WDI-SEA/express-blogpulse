<h4>Comment on this post</h4>

<form action="/articles/<%=articleId%>/comments" method="POST">
  <div class="form-group">
    <label for="name">Full Name</label>
    <input type="text" class="form-control" id="comment-name" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="comment-text" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary" id="comment-submit-btn">
</form>