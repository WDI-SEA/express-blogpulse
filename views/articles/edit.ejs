<h3>EDIT ARTICLE</h3>

<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>


<form method="POST" action="/articles/<%= article.id %>/?_method=PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" required value="<%= article.title %>">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea type="text" class="form-control" id="content" name="content" required><%= article.content %></textarea>
    </div>
      <input type="hidden" class="form-control" id="authorId" name="authorId" required value="<%= article.author.id %>">
    <input type="submit" class="btn btn-primary">
  </form>