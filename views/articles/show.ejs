<h1>
  <%= article.title %> <small>by <%= article.author.getFullName() %></small>
</h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<% article.comments.forEach(c => { %>
<div class="comments">
  <p><%= c.name %></p>
  <p><%= c.dataValues.content %></p>
</div>
<% }) %>

