<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr>
<a href="/">&larr; Back Home</a>
<hr>
<h3>Comments</h3>
<div class="form-holder">
  <form action="/comments" method="POST">
    <input type="hidden" name="articleId" value="<%= article.id %>">

    <div class="form-group">
      <label for="title">Name</label>
      <input type="text" class="form-control" id="contributor" name="contributor" placeholder="Steven Universe" required>
    </div>

    <div class="form-group">
      <label for="content">Comment</label>
      <textarea type="text" class="form-control" id="content" name="content" required></textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Add to the discussion">
  </form>
</div>

<% if(article && article.comments) { %>
  <% article.comments.forEach(function(c) { %>
    <div class="well">
      <%= c.contributor %>
      <br>
      <%= c.content %>
    </div>
  <% }) %>
<% } else { %>
  <h3>No comments yet!</h3>
<% } %>
