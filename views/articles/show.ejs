<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>
<% if(article.tags.length > 0) { %>
    <% article.tags.forEach(tag => {%>
        <a href="/tags/<%= tag.id %>"><span class="badge badge-primary"><%= tag.name %></span></a>
    <% }) %>
<% } %>

<hr>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr>

<h3><strong>Comments</strong></h3>

<% if(article.comments.length > 0) { %>
  <% article.comments.forEach(comment => {%>
      <div class="well">
          <p>
              <%= comment.context %>
          </p>
          <p>
              <strong>- <%= comment.name %></strong>
          </p>
      </div>
  <% }) %>
<% } %>

<hr />

<h4>Comment on this post</h4>
<form method="POST" action="/articles/<%= article.id %>">
    <div class="form-group">
        <label for="name">Name</label>
        <input  class="form-control" type="text" name="name" placeholder="Your Name Here...">
    </div>

    <div class="form-group">
        <label for="context">Content</label>
        <textarea  class="form-control" name="context" id="context" placeholder="Comment Here..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Comment</button>
</form>

<hr />

<a href="/">&larr; Back Home</a>
