<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<form method="POST" action="/articles/<%= article.id %>">
  <div class="form-group">
    <label for="comment">Comment:</label>
    <textarea id="comment" class="form-control" rows="5" type="text" name="content" placeholder="Enter Comment Here"></textarea>
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="name" placeholder="Enter Name Here"/>
  </div>
  <button class="form-control btn btn-primary" type="submit">Add Comment</button>
</form>
<% article.comments.forEach(comment => { %> 
  <h6 class="well"><%= comment.name %> says <%= comment.content %></h6>
<% }); %>

<hr />

<a href="/">&larr; Back Home</a>
