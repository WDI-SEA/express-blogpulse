<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />
<% if( article.comments) {%>
  <% article.comments.forEach(comment => {%>
    <p><%= comment.commentName%> said "<%= comment.content%>"</p>
    <hr>
  <% })%>
<% } %>
<form action="/articles/:id" method="POST">
  <div class="form-group">
    <label for="commentName">Name</label>
    <input type="text" class="form-control" id="commentName" name="commentName" required>
  </div>
  <div class="form-group">
    <label for="content">Comment</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>
  <input type="hidden" name="articleId" value="<%= article.id %>">

  <input type="submit" class="btn btn-primary">
</form>

<a href="/">&larr; Back Home</a>
