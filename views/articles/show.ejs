<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />
<% article.comments.forEach(comment => { %>
  
  <p><%= comment.content %></p>
  <p><strong>- <%= comment.name %></strong><br></p>
  <hr>
  <% }) %>


<form action="/articles/<%= article.id %>/comments" method="POST">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Leave a Comment</label>
    <textarea id="content" name="content" class="form-control" cols="30" rows="10"></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>


<hr />

<a href="/">&larr; Back Home</a>
