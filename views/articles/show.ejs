<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<h2>Comments</h2>
<div>
  <% article.comments.forEach(comment => { %>
    <div>
      <p> <%= comment.content %></p>
      <p> <strong> - <%= comment.name %> </strong></p>
    </div>
  <%}) %>
</div>

<hr />

<h3> Create a new comment </h3>
<form action="/articles/:id" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="string" class="form-control" name="name" required>
  </div>

  <div hidden>
    <textarea type="integer" name="articleId" required><%=id%></textarea>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
<hr />
<a href="/">&larr; Back Home</a>
