<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />
<h3>Comments from people: </h3>
<% article.comments.forEach((comment) => { %>
  <small><%= comment.name %></small>
  <p><%= comment.content %></p>
<% }) %>

<h3>Leave a comment</h3>

<form action="/articles/<%= article.id %>" method="POST">
  <div>
    <!-- <input hidden value="<%= article.id %>" name="articleID" /> -->
    <label for="comment-name">Your Name</label>
    <input name="commentname" id="comment-name" class="form-control" required>
  </div>
  <div>
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>
  <input type="submit" class="btn btn-primary">
</form>
<a href="/">&larr; Back Home</a>
