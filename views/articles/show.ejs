<h1><%= article.title %> <small class="credits">by <%= article.author.getFullName() %></small></h1>

<div>
<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>
</div>
<hr />



<div>
  <% if (article.comments.length > 0) { %>
  <% article.comments.forEach(function(c) { %>
    <div class="commentbox">
     <strong><%= c.name %></strong>
     <p><%= c.content %></p>
    </div>
  <% }) %>
  <% } else { %>
    <p>(No comments)</p>
  <% } %>
</div>

<div class="commentform">
<form method="POST" action="/comments/articles">
  <div class="form-group">
    <label for="name">Comment</label>
    <input type="text" name="name" id="name" class="form-control" required placeholder="Your Name" style="width: 200px;">
    <input type="hidden" name="articleId" value="<%= article.id %>">
    <textarea type="text" class="form-control" id="content" name="content" required placeholder="Write a comment..."></textarea>
  
  </div>
    <input type="submit" class="btn btn-primary indigo darken-1" value="Post">
</form>
</div>



