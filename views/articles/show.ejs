<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<a href="/">&larr; Back Home</a>
<h3>Comments</h3>
<% comments.forEach(c => { %>
  <h4><%= c.author %></h4>
  <p><%= c.content %></p>
<% })%>


<form method="POST" action="/articles/<%= article.id %>">
  <label for="newCommentName">Author</label>
  <input type="text" id="newCommentName" name="newCommentName">
  <label for="newCommentContent">Comment</label>
  <input type="text" id="newCommentContent" name="newCommentContent">
  <input type="submit">
</form>