<h1>
  <%= article.title %> by <%= article.author.getFullName() %>
</h1>

<!-- timestamps article was created at -->
<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>
<!-- article description/summary -->
<p><%= article.content %></p>

<!-- if there are comments, display name and comment-->
<hr />
<% if(article.comments.length > 0) { %> 
<% article.comments.forEach(comment => { %>
<div class="well">
  <p>
    <%= comment.name %> 
    <br />
    <%= comment.content %>
  </p>
</div>
<% }) %> <% } else { %> <!-- if there are no comments -->
<h3>No comments yet! Add some! </h3>
<% } %>


<!-- form to add a comment-->
<div>
  <h4>Add a Comment:</h4>
  <form method="POST" action="/comments">
    <input type="hidden" name="articleId" value="<%= article.id %>" />
    <label for="name">Name</label>
    <input type="text" id="name" name="name" required />
    <label for="comment">Comment</label>
    <input type="text" id="content" name="content" required />
    <input type="submit" />
  </form>
</div>
<br />

<a href="/">&larr; Back To Homepage</a>