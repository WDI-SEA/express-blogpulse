<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<div>
  <% if(article.comments.length > 0) { %>
    <% article.comments.forEach(comment => { %>
      <div class="well">
        <p>
          <%= comment.commentator %> commented:<br />
          <%= comment.commentContent %>
        </p>
      </div>
  <% }) %>
  <% } else { %>
    <h3>Sorry, no comments yet! &#129335;</h3>
  <% } %>
</div>

<hr />
<form action="/comments" method="POST">
  <div class="form-group">
    <label for="commentator">Name</label>
    <input type="text" class="form-control" id="commentator" name="commentator" placeholder="Your name" required>
  </div>
  <div class="form-group">
    <label for="commentContent">Add comment here</label>
    <input type="text" class="form-control" id="commentContent" name="commentContent" placeholder="Your comment" required>
  </div>
  <input type="submit" class="btn btn-primary">
</form>
<hr />

<a href="/">&larr; Back Home</a>
