<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<h3>Comments</h3>

<div>
  <% comments.forEach(comment =>
  { %>
    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= comment.content %></p>
        <h5 class="card-title">- <%= comment.name %></h5>
      </div>
    </div>
  <% }) %>
</div>

<hr />

<h4>Comment on this post</h4>
<form method="POST" action="/articles/<%= article.id %>/comments">
  <div class="form-group">
    <label for="commentor">Name </label>
    <input type="text" class="form-control" id="commentor" name="name" required>
  </div>  

  <div class="form-group">
    <label for="content">Content </label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="submit" class="btn btn-primary" value="Comment">
</form>

<hr />

<a href="/">&larr; Back Home</a>
