

<form action="/authors/<%=author.id%>/<%=author.posts[0].id%>/edit" method='post'>
  <h1><input style='width:60%' type="text" name="title" value='<%= author.posts[0].title %>'></h1>
  <h1><small>by <%= author.getFullName() %></small></h1>
  <p><input style='width:70%' type="text" name="content" value='<%= author.posts[0].content %>'></p>
  <input type="submit" value='Edit Blog Post'>
</form>

