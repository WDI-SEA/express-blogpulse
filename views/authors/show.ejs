<h1>Author: <%= author.getFullName() %></h1>

<p><%= author.bio %></p>
<a href="/articles/new/<%=author.id%>" class="btn btn-primary">Create a new Post</a>

<hr />

<h2>Articles</h2>

<% if(author && author.articles) { %>
  <% author.articles.forEach(function(a) { %>
    <div class="well">
      <h3>
        <a href="/articles/<%= a.id %>"><%= a.title %></a>
      </h3>
      <a href="/articles/edit/<%= a.id %>">
        <button>Edit Article</button>
      </a>
    </div>
  <% }) %>
<% } else { %>
  <h3>No articles yet!</h3>
<% } %>
